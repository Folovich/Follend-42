{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-I/usr/include", // Путь к заголовочным файлам
                "-L/usr/lib",     // Путь к библиотекам
                "-lsfml-graphics", // Подключение библиотеки
                "-lsfml-window",
                "-lsfml-audio"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}
