{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "src/*.cpp",  // Укажите путь к вашим исходным файлам
                "-o",
                "bin/Follend-42.exe",  // Укажите путь для выходного файла
                "-I${workspaceFolder}/include",  // Путь к заголовкам
                "-L${workspaceFolder}/lib",  // Путь к библиотекам
                "-lsfml-graphics",
                "-lsfml-window",
                "-lsfml-system"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}
